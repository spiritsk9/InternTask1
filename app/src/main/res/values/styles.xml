<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Regular">
        <item name="android:fontFamily">@font/assistantregular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffff</item>
</style>

    <style name="SemiBold">
        <item name="android:fontFamily">@font/assistantsemibold</item>
        <item name="android:textColor">#ffff</item>
    </style>

    <style name="Values">
    <item name="android:fontFamily">@font/assistantbold</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#ffff</item>
    <item name="android:textSize">32sp</item>
    </style>

    <style name="ValueMsg">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/assistantbold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="Refular">
        <item name="android:fontFamily">@font/assistantbold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Date">
        <item name="android:fontFamily">@font/assistantbold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#100F0F</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Month">
        <item name="android:fontFamily">@font/assistantsemibold</item>
        <item name="android:textColor">#100F0F</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Day">
        <item name="android:fontFamily">@font/assistantregular</item>
        <item name="android:textColor">#100F0F</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="YellBold">
        <item name="android:fontFamily">@font/assistantbold</item>
        <item name="android:textColor">#F6CB12</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="UploadImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawableStart">@drawable/camerayello</item>
        <item name="android:background">@drawable/dashed_border</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4C4B4B</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="InputTextViews">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_marginStart">15dp</item>
    <item name="android:layout_marginEnd">15dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:background">@drawable/edit_text_border</item>
    <item name="android:gravity">center_vertical</item>


</style>

    <style name="InputNotes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="paddingStart">5dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:gravity">start</item>
    </style>

        <style name="BtnMarkAttendance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
            <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="paddingStart">5dp</item>
        <item name="android:gravity">center</item>
            <item name="android:fontFamily">@font/assistantsemibold</item>
            <item name="android:textColor">#ffff</item>
        </style>

    <style name="RadioBtn">
    <item name="android:textColor">#4C4B4B</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>