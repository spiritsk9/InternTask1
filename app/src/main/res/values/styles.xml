<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Regular">
        <item name="android:fontFamily">@font/assistantregular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffff</item>
</style>

    <style name="SemiBold">
        <item name="android:fontFamily">@font/assistantsemibold</item>
        <item name="android:textColor">#ffff</item>
    </style>

    <style name="Values">
    <item name="android:fontFamily">@font/assistantbold</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#ffff</item>
    <item name="android:textSize">32sp</item>
    </style>

    <style name="ValueMsg">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/assistantbold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="Refular">
        <item name="android:fontFamily">@font/assistantbold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Date">
        <item name="android:fontFamily">@font/assistantbold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#100F0F</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Month">
        <item name="android:fontFamily">@font/assistantsemibold</item>
        <item name="android:textColor">#100F0F</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Day">
        <item name="android:fontFamily">@font/assistantregular</item>
        <item name="android:textColor">#100F0F</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="YellBold">
        <item name="android:fontFamily">@font/assistantbold</item>
        <item name="android:textColor">#F6CB12</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>